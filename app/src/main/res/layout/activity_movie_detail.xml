<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="86dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView"
                android:layout_alignRight="@id/textView6"
                android:layout_weight="1"

        />
    </LinearLayout>
    <TextView
            android:text="Title:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"

    />
    <TextView
            android:text="Venom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView6"
            android:id="@+id/textView7"
            android:textSize="18sp"/>
    <TextView
            android:text="Overview:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            android:id="@+id/textView8"
    />
    <TextView
            android:text="When Eddie Brock acquires the powers of a symbiote, he will have to release his alter-ego Venom to save his life."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView9" android:textSize="18sp"/>
    <TextView
            android:text="Language:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView10"/>
    <TextView
            android:text="English"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_height="wrap_content" android:id="@+id/textView11"/>
    <TextView
            android:text="Release date:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView12"/>
    <TextView
            android:text="03-10-2018"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_height="wrap_content" android:id="@+id/textView13"/>
    <TextView
            android:text="Suitable for children below 13:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView14"/>
    <TextView
            android:text="Yes"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_height="wrap_content" android:id="@+id/textView15"/>
</LinearLayout>
